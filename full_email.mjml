        <!-- End of Image -->

        <!-- Buttons -->
        <mj-button href="#">
          Email the Prime Minister!
        </mj-button>

        <mj-button mj-class="button_whatsapp" href="#">
          Share on WhatsApp
        </mj-button>

        <mj-button mj-class="button_facebook" href="#">
          Share on Facebook
        </mj-button>

        <mj-button mj-class="button_email" href="#">
          Share on Email
        </mj-button>

        <mj-button mj-class="button_twitter" href="#">
          Share on Twitter
        </mj-button>
        <!-- End of Buttons -->

        <!-- Text block -->
        <mj-text>

          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.

        </mj-text>
        <!-- End of Text block -->

        <!-- Bulletpoint list -->
        <mj-text>
          <ul>
            <li>One</li>
            <li>Two</li>
            <li>Three</li>
          </ul>
        </mj-text>
        <!-- End of Bulletpoint list -->

        <!-- Numbered list -->
        <mj-text>
          <ol>
            <li>One</li>
            <li>Two</li>
            <li>Three</li>
          </ol>
        </mj-text>
        <!-- End of Numbered list -->



        <!-- End of Body -->
      </mj-column>
    </mj-section>


    <!-- Footer -->
    <mj-section background-color="#275573" full-width="full-width">
      <mj-group>
        <mj-column background-color="transparent">
          <mj-image src="https://images.squarespace-cdn.com/content/59242ebc03596e804886c7f4/1579691989967-51SOAXRL598SW0AOHRV7/facebook_do_not_delete.png" width="24px" height="24px" alt="Facebook logo" href="https://www.facebook.com/TraidcraftExchange/" />
