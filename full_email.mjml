<mjml lang="en-GB">

  <!-- Styles -->
  <mj-head>
    <mj-attributes>
      <mj-text color="#232323" line-height="24px" />
      <mj-all font-family="Arial" font-size="16px" />
      <mj-button background-color="#275573" color="#ffffff" font-weight="bold" width="70%" inner-padding="16px 24px" />

      <mj-class name="button_facebook" background-color="#29487D" />
      <mj-class name="button_twitter" background-color="#55ACEE" />
      <mj-class name="button_whatsapp" background-color="#4FCE5D" />
      <mj-class name="button_email" background-color="#777777" />

      <mj-class name="h1" color="#005a79" font-size="34px" line-height="51px" />
      <mj-class name="h2" color="#005a79" font-size="24px" line-height="36px" />
      <mj-class name="h3" font-size="18px" font-weight="bold" line-height="27px" />
    </mj-attributes>
  </mj-head>
  <!-- End of Styles -->


  <mj-body>
    <!-- Header -->
    <mj-section background-color="#275573" full-width="full-width">
